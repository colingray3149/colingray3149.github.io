---
// This component just provides the container and the central line.
---
<div class="timeline-container">
  <slot />
</div>

<style>
  .timeline-container {
    position: relative;
    max-width: 960px;
    margin: 40px auto;
    padding: 20px 0;
  }
  .timeline-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 100%;
    background-image: linear-gradient(to bottom, var(--purple), var(--cyan), var(--pink));
    border-radius: 3px;
    box-shadow: 0 0 10px var(--glow-cyan);
  }

  @media (max-width: 768px) {
  .timeline-container::before {
    left: 20px;           /* put the spine 20px from the left edge */
    transform: none;      /* no centering transform on mobile */
  }
}

</style>