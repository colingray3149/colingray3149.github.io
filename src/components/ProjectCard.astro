---
const { project } = Astro.props;
---
<a href={project.href} class="cyber-box project-card">
  <div>
    <h3 class="project-title">{project.title}</h3>
    <p class="project-blurb">{project.blurb}</p>
  </div>
  <span class="project-link">View Project â†’</span>
</a>

<style>
  .project-card {
    text-decoration: none;
    text-align: center;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  .project-card:hover {
    transform: translateY(-4px);
    color: var(--text); /* Keep text color consistent on hover */
  }
  .project-title {
    margin: 0 0 12px 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    line-height: 1.3;
  }
  .project-blurb {
    margin: 0 0 24px 0;
    font-size: 0.9rem;
    color: var(--muted);
    line-height: 1.5;
    flex-grow: 1;
  }
  .project-link {
    color: var(--cyan);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  .project-card:hover .project-link {
    color: var(--pink);
  }
</style>