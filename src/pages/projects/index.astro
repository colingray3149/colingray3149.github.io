---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectCardLarge from "../../components/ProjectCardLarge.astro";

// Bigger, richer cards just for THIS page
const projects = [
  {
    title: "(Summer 2026) Combustion Reaction Mechanism Pruning with Machine Learning",
    href: "/projects/combustion-ml/",
    blurb: "The Sisyphean task of data generating and processing",
    desc: "Began as using LASSO (L1-pruning) feature selection to perform species reduction, and has evolved to using gates to register output importance at various times.",
    img: "/images/projects/combustion-ml.jpg",
    imgAlt: "Combustion ML charts",
  },
  {
    title: "ANSYS Fluent — Scramjet Cold-Flow",
    href: "/projects/ansys-coldflow/",
    blurb: "I just finished the Ansys CFD tutorial",
    desc: "This software is much more nontrivial than I imagined, and I had to take a break to make the portfolio which took almost 6 days.",
    img: "/images/projects/ansys-coldflow.jpg",
    imgAlt: "ANSYS Fluent cold-flow contours",
  },
  {
    title: "FDS/PyroSim — Dresser Fire",
    href: "/projects/fds-dresser-fire/",
    blurb: "Running one simulation takes my laptop 24 hours",
    desc: "My first main CAD experience since learning Creo in high school for robotics. I overestimated the resolution I could run, struggled through creating the fire, meshing, applying materials, and finally getting good data.",
    img: "/images/projects/fds-dresser-fire.jpg",
    imgAlt: "FDS/PyroSim smoke & heat maps",
  },
  {
    title: "(Summer 2025) Jet Fuel Autoignition Research Internship",
    href: "/projects/autoignition-research/",
    blurb: "Staring at a flask for minutes to see a <1 second ignition",
    desc: "My first hands on experience with combustion, and learning how intricate and unpredictable it can be. Involved a ton of literature review, database aggregation, and justifying the purchases of expensive chemicals.",
    img: "/images/projects/autoignition.jpg",
    imgAlt: "Autoignition research illustration",
  },
  {
    title: "Fireworks Wastewater Processing Plant",
    href: "/projects/wastewater-processing/",
    blurb: "Technically my first chemical processing plant",
    desc: "Extremely thorough investigation of how fireworks are produced, byproducts, what the recommended environmental limit is, and how to get rid of them. Several assumptions were made to make it a feasible class project, but it still took over 25 hours.",
    img: "/images/projects/fireworks-wastewater.jpg",
    imgAlt: "Field notebook and PPE",
  },
];
---

<BaseLayout title="Projects — Colin Gray">
  <div class="wrap">
    <h1 class="page-title">Projects</h1>
    <p class="page-subtitle text-muted">A collection of my work from internships, classes, and personal projects</p>
    <div class="projects-shell">
        <div class="projects-grid">
        {projects.map((project) => <ProjectCardLarge project={project} />)}
        </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-title {
    text-align: center;
    margin-bottom: 12px;
    background: linear-gradient(135deg, var(--pink), var(--cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .page-subtitle {
    text-align: center;
    margin-bottom: 48px;
    max-width: 58ch;
    margin-left: auto;
    margin-right: auto;
  }

/* Center the grid and limit total width to ~2/3 of the viewport */
.projects-shell {
  /* cap the absolute width so giant screens don’t make the cards too wide */
  max-width: min(1100px, 66vw);
  margin: 0 auto;          /* center shell */
}

/* default: single column on small screens */
.projects-grid {
  display: grid;
  gap: 36px;                /* generous space between cards */
  grid-template-columns: 1fr;
}

/* desktop/tablet: exactly two columns */
@media (min-width: 900px) {
  .projects-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Optional: if you want the lone last card centered on the final row */
.projects-grid > :last-child:nth-child(odd) {
  grid-column: 1 / -1;     /* span both columns */
  justify-self: center;
  max-width: 620px;        /* keep it from stretching too wide */
  width: 100%;
}

</style>
