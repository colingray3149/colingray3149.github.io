---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  { 
    title: "Combustion ML (Mechanism Reduction)", 
    href: "/projects/combustion-ml/", 
    blurb: "L1 pruning, speedup & accuracy tradeoffs", 
  },
  { 
    title: "ANSYS Fluent — Scramjet Cold-Flow", 
    href: "/projects/ansys-coldflow/", 
    blurb: "2D geometry, mesh study, baseline solution", 
  },
  { 
    title: "FDS/PyroSim — Dresser Fire", 
    href: "/projects/fds-dresser-fire/", 
    blurb: "HRRPUA & vent sensitivity", 
  },
  { 
    title: "Autoignition Temperature Research", 
    href: "/projects/autoignition-research/", 
    blurb: "Summer research notes & findings", 
  },
];
---
<BaseLayout title="Colin Gray — Combustion | CFD | ML">
  <div class="wrap">
    <section class="hero-section">
      <div class="hero-grid">
        <div class="profile-section">
          <div class="avatar-container">
            <div class="avatar-placeholder">
              <span class="avatar-text">CG</span>
            </div>
          </div>
          <h1>Colin Gray</h1>
          <p class="text-muted tagline">
            Caltech undergraduate · Chemical Engineering · Combustion & CFD · ML for reaction mechanisms
          </p>
          <div class="social-links">
            <a href="https://github.com/colingray3149" class="social-link" title="GitHub"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>GitHub</a>
            <a href="https://www.linkedin.com/in/colingray3149" class="social-link" title="LinkedIn"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>LinkedIn</a>
            <a href="mailto:gray.d.colin@gmail.com" class="social-link" title="Email"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h1.685L12 11.39l8.679-7.569h1.685c.904 0 1.636.732 1.636 1.636z"/></svg>Email</a>
          </div>
        </div>
        <div class="content-section">
          <div class="cyber-box about-box"><h2>About</h2><p>I'm a Chemical Engineering undergraduate at Caltech specializing in combustion modeling and computational fluid dynamics (CFD). I apply machine learning techniques to accelerate and improve reaction mechanism simulations.</p></div>
          <div class="cyber-box interests-box"><h2>Research Interests</h2><ul class="interest-list"><li>High-Fidelity Combustion Simulation</li><li>ML for Mechanism Reduction</li><li>Computational Fluid Dynamics</li></ul></div>
        </div>
      </div>
    </section>
    <section class="projects-section">
      <div class="city-mode-bg"><h2 class="section-title">Recent Projects</h2></div>
      <div class="projects-grid">
        {projects.map((project) => ( <ProjectCard project={project} /> ))}
      </div>
	  <div class="city-mode-bg">
	  <p class="projects-footer-text">
    	 To read more, view my <a href="/projects/" class="gradient-link">Projects</a> page or select an individual project above.
  	  </p>
	  </div>
    </section>
  </div>
  <style>
  .hero-section{margin-bottom:30px}.hero-grid{display:grid;gap:32px;align-items:start;grid-template-columns:1fr}@media (min-width:900px){.hero-grid{grid-template-columns:1fr 1.6fr}}.profile-section{display:flex;flex-direction:column;align-items:center;text-align:center}@media (min-width:900px){.profile-section{align-items:flex-start;text-align:left}}.avatar-container{margin-bottom:24px}.avatar-placeholder{width:120px;height:120px;border-radius:50%;background:linear-gradient(135deg,var(--pink),var(--cyan));display:flex;align-items:center;justify-content:center;box-shadow:var(--shadow)}.avatar-text{font-size:2rem;font-weight:700;color:#fff}.profile-section h1{margin-bottom:12px;background:linear-gradient(135deg,var(--pink),var(--cyan));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}.tagline{max-width:40ch;margin-bottom:32px;line-height:1.6}.social-links{display:flex;gap:12px;flex-wrap:wrap;justify-content:center}@media (min-width:900px){.social-links{justify-content:flex-start}}.social-link{display:flex;align-items:center;gap:8px;padding:10px 16px;border:1px solid var(--line);border-radius:999px;background:var(--panel-2);font-size:.85rem;font-weight:500;transition:all .3s ease;text-decoration:none}.social-link svg{flex-shrink:0}.content-section{display:grid;gap:24px;grid-template-columns:1fr}.about-box h2,.interests-box h2{margin:0 0 16px;background:linear-gradient(135deg,var(--pink),var(--cyan));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;font-size:1.25rem}.about-box p{margin:0;line-height:1.7;color:var(--text-secondary)}.interest-list{list-style:none;padding:0;margin:0}.interest-list li{padding:10px 0;border-bottom:1px solid rgba(35,40,56,.5);font-size:.95rem;color:var(--text-secondary);display:flex;align-items:center}.interest-list li:last-child{border-bottom:none}.interest-list li:before{content:"→";margin-right:12px;color:var(--cyan);font-weight:600}.projects-section{margin-top:30px}.section-title{margin-bottom:40px;text-align:center;background:linear-gradient(135deg,var(--pink),var(--cyan));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}.projects-grid{display:grid;gap:24px;grid-template-columns:repeat(auto-fit,minmax(250px,1fr))}
  .projects-footer-text {
    text-align: center;
    margin-top: 40px;
    color: var(--muted);
  }
  </style>
</BaseLayout>